<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity"
    >

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/whatson"
        android:background="@drawable/subarsmall"
        android:layout_marginBottom="9dp"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/sports"
        android:background="@drawable/sportssmall"
        android:fadingEdge="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="9dp"
        android:layout_toRightOf="@id/whatson"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/societies"
        android:background="@drawable/societiessmall"
        android:layout_marginBottom="9dp"
        android:layout_below="@id/whatson"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/play"
        android:background="@drawable/justplaysmall"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="9dp"
        android:layout_toRightOf="@id/societies"
        android:layout_below="@id/sports"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/venues"
        android:background="@drawable/venuessmall"
        android:layout_marginBottom="9dp"
        android:layout_below="@id/societies"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/safety"
        android:background="@drawable/safetybussmall"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="9dp"
        android:layout_toRightOf="@id/venues"
        android:layout_below="@id/play"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/advice"
        android:background="@drawable/suadvicesmall"
        android:layout_marginBottom="9dp"
        android:layout_below="@id/venues"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/lets"
        android:background="@drawable/sulets"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="9dp"
        android:layout_below="@id/safety"
        android:layout_toRightOf="@id/advice"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/creative"
        android:background="@drawable/creativesmall"
        android:layout_below="@id/advice"
        android:elevation="10dp"
        />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/placeholder"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/creative"
        android:layout_below="@id/lets"
        />

</RelativeLayout>